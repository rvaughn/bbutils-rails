<h3><%= member_icon %> <%= @member.name %></h3>
<p>Username: <%= @member.username %></p>
<div class="panel panel-primary">
  <div class="panel-heading">
    <h3 class="panel-title">Groups</h3>
  </div>
  <table class="table table-striped">
    <% comment do %>
    <thead>
      <tr>
        <th>Groups</th>
      </tr>
    </thead>
    <% end %>
    <tbody>
      <% @member.groups.sort{ |a,b| a.name <=> b.name }.each do |group| %>
      <tr>
        <td><%= link_to group.name, group_path(group.slug) %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
<div class="panel panel-primary">
  <div class="panel-heading">
    <h3 class="panel-title">Repositories</h3>
  </div>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Permission</th>
      </tr>
    </thead>
    <tbody>
      <% @member.member_permissions.sort{ |a,b| a.repository.name <=> b.repository.name }.each do |perm| %>
      <tr>
        <td><%= link_to perm.repository.name, repository_path(perm.repository.slug) %></td>
        <td width="30%"><%= perm.permission %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
